html, body, div, a, ul, li
	margin 0
	padding 0
	
ul
	list-style-type none
	li
		display inline-block
		a
			text-decoration none
			color black
			
html
	height 100%
	width 100%
	body
		display block
		height 100%
		width 100%
		text-align center
		
		#container
			display inline-block
			width 35rem
			padding-top 7rem
			text-align center
			.description
				display inline-block
				width 33rem
				text-align left
				font-size 1.2rem
				font-family Calisto MT, Book Antiqua, serif
				&:first-letter
					margin-left 1rem
			#menu
				display inline-block
				position relative
				width 30rem
				height 20rem
				margin-top 5rem
				li
					float left
					width 10rem
					height 10rem
					background-color #ddd
					line-height 10rem
					text-align center
					transition background-color 500ms
					font-size 1.2rem
					font-family Century Gothic
					a
						display inline-block
						width 100%
						height 100%
					&:hover
						background-color #EEEEEE
					span
						display block
						font-size 0.8rem
						margin-top - 8rem
						opacity 0.6