html, body, div
	margin 0
	padding 0
html
	height 100%
body
	width 100%
	height 100%
	display block
	#content
		width inherit
		height inherit
		display block
	#info
		position absolute
		top 0
		right -14rem
		background-color rgba(0,0,0,0.2)
		width 16rem
		height 100%
		transition right 300ms, background-color 300ms
		padding 2rem
		box-sizing border-box
		.description
			width 100%
			height 100%
			color white
			font-size 1.2rem
			overflow auto
			font-family Century Gothic
		.description:first-letter
			padding-left 1rem
	#info:hover
		right 0
		background-color rgba(0,0,0,0.8)
			